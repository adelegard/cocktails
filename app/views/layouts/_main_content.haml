-if current_page?(root_url) && !user_signed_in?
    .row-fluid.offset3.main_user_message
        .span8
            .wrap
                %header
                    %h2 CocktailRecipes is where users share and explore new drink recipes
                    .actions
                        %a{:href => new_user_registration_path} Sign Up
                        %span.separatorVert="|"
                        %a{:href => new_user_session_path} Sign In
.container-fluid.the_main
    .main-content.row-fluid
        .row-fluid
            -span_size = 12
            -if @display_search_sidebar
                -search_span_size = 2
                -span_size = span_size - search_span_size
                %div{:class => "span#{search_span_size}"}
                    =render :partial => "layouts/search_sidebar"
            %div{:class => "span#{span_size}"}
                =render :partial => "shared/flash_messages", :locals => {:flash => flash}
                = yield