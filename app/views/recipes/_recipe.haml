.well.span2.pull-right.wsnw
	=render :partial => '/recipes/favorite', :locals => {:recipe_id => @recipe.id, :include_text => true}
	%div
		%i.icon-list-alt
		%a.showFullPageView{:href => "#"} Full Page View
	%i.icon-picture
	%a{:href => "/uploadphoto?recipe_id=#{@recipe.id}"} Add Photo
	%br
	%i.icon-print
	%a{:href => "#"} Print
	%br
	%i.icon-envelope
	%a{:href => "#"} Email
	%hr
	=render :partial => '/widgets/facebook', :locals => {:href => "http://www.blahcocktails.com/recipe/#{@recipe.id}"}
	.social
		=render :partial => '/widgets/twitter'
=render :partial => '/recipes/rating_links'
%br
-if @recipe_user != nil && @recipe_user.rating
	Current Rating: 
	=@recipe_user.rating
	%br
%br
-if @ingredients.size > 0
	%h3.ingredients_heading Ingredients
	%ul.recipe_ingredients
		- @ingredients.each do |ingredient|
			-if ingredient[:in_liquor_cabinet]
				-ingredient_icon = "icon-ok"
				-ingredient_class = "in_liquor_cabinet"
				-ingredient_tt = "Click to Remove from Liquor Cabinet"
			-elsif ingredient[:in_liquor_cabinet] != nil
				-ingredient_icon = "icon-remove"
				-ingredient_class = "not_in_liquor_cabinet"
				-ingredient_tt = "Click to Add to Liquor Cabinet"
			%li.ingredient{:class => "#{ingredient_class}"}
				-if ingredient_icon != nil
					%i{:class => "#{ingredient_icon}"}
				%span.full_ingredient
					%span{:title => "#{ingredient_tt}"}= ingredient[:amount]
					%span.the_ingredient= ingredient[:ingredient]
%br
.directions
	%h3 Directions
	= @recipe.directions
%br
-if @recipe.alcohol != ""
	.alcohol_percent
		%b Alcohol Percent:
		= @recipe.alcohol
-if @recipe.glass != ""
	.serve_in
		%b Serve in:
		= @recipe.glass