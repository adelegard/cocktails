%h2 New Recipe
%br
=form_for @recipe, :html => { :multipart => true} do |f|
	%fieldset.new_recipe_ingredients
		%h4 Title
		.control-group
			.controls
				= f.text_field :title, :class => "input-xlarge", :placeholder => "Enter recipe title..."
		.control-group
			= f.label :photo, 'Choose a photo:', :class => "control-label"
			.controls
				= f.file_field :photo
		.the_ingredients
			%h4 Ingredients
			.control-group.ingredient
				.controls
					=render :partial => '/recipes/new_ingredient', :locals => {:select_class => "chzn-select"}
		.control-group
			.controls
				%button.btn.btn-success.new_recipe_ingredient_add Add Ingredient
		.control-group
			%h4 Alcohol Percent
			.controls
				= f.text_field :alcohol, :class => "input-xlarge", :size => 2
		.control-group
			%h4 Glass
			.controls
				%select.chzn-select{"data-placeholder" => "Choose a glass...", :style => "width:200px;", :name => "glass"}
					%option Beer Mug
					%option Bucket
		.control-group
			%h4 Directions
			%br
			.controls
				= f.text_area(:directions, :id => "new_recipe_directions", :cols => 10, :rows => 5, :class => "input-xlarge span6 new_recipe_directions", :placeholder => "Enter any required instructions for this recipe...")
				.char_remaining
					%span#characters_remaining
					%span characters remaining
		.control-group
			.controls
				= f.submit 'Create Recipe', :class => "btn btn-primary"
.dn.control-group.ingredient.new_recipe_ingredient
	.controls
		=render :partial => '/recipes/new_ingredient', :locals => {:select_class => ""}