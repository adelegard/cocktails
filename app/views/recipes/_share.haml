.recipe_share
    .btn-group
        %a.share.btn{:href => "#"}
            %i.icon-share.fl
            %span.fl Share
        %a.btn{:href => "#"}
            = num_shared
    .btn-group.like
        %a.btn{:href => "/recipes/#{recipe_id}/like", :class => like_disabled}
            %i.icon-heart.fl
            %span.fl Like
        %a.btn{:href => "#", :title => "See who liked this", :class => like_disabled}
            = num_liked
    .btn-group.save
        %a.btn{:href => "/recipes/#{recipe_id}/favorite", :class => save_disabled}
            %i.icon-star.fl
            %span.fl Save
        %a.btn{:href => "#", :title => "See who saved this", :class => save_disabled}
            = num_saved



.recipe_share.modal.hide
    .modal-header
        %button.close{:type => "button", "data-dismiss" => "modal"} Ã—
        %h3 Share this recipe
    .modal-body
        #main_img_container
            -if !@recipe_photos.empty?
                =image_tag @recipe_photos.first.photo.url(:large), :id => "main_img"
                