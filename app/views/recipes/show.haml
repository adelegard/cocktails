-@pageTitle = "Recipe - #{@recipe.title}"

.cb
=render :partial => '/recipes/full_page_view'
.page-header
    #recipe_social.well.span2.fr
        =render :partial => '/recipes/social', :locals => {:recipe_id => @recipe.id, :recipe_user => @recipe_user, :num_shared => 367, :num_liked => @num_liked, :num_saved => @num_starred}
    #drink_thumb.dib.fl
        -if @recipe_photos.empty?
            .default_thumb_photo
        -else
            %a{:href => "#", "data-toggle" => "modal", "data-target" => "#photo_modal"}
                = image_tag @recipe_photos.first.photo.url(:thumb)
            .num_photos 1 of #{@recipe_photos.size}
        .add_photo
            %a{:href => "/recipes/uploadphoto?id=#{@recipe.id}"}
                %i.icon-upload
                %span Add a Photo
    .dib
        %h1= @recipe.title
        -if @recipe_creator
            %small by #{@recipe_creator.name}
    .cl
%ul.nav.nav-tabs
    %li.active
        %a{:href => "#recipe", "data-toggle" => "tab"} Recipe
    %li
        %a{:href => "#comments", "data-toggle" => "tab"} Comments
//%a{:href => "#{request.fullpath}#disqus_thread#comments", "data-toggle" => "tab", "data-disqus-identifier" => "#{@recipe.id}"} Comment
.tab-content
    .tab-pane.fade.in.active#recipe
        =render :partial => 'recipes/recipe'
    .tab-pane.fade#comments
        =render :partial => 'widgets/disqus'
#photo_modal.modal.hide
    .modal-header
        %button.close{:type => "button", "data-dismiss" => "modal"} Ã—
        %h3 Cocktail Photos
    .modal-body
        #main_img_container
            -if !@recipe_photos.empty?
                =image_tag @recipe_photos.first.photo.url(:large), :id => "main_img"
        .thumbs
            -@recipe_photos.each_with_index do |photo, index|
                -if index == 0
                    -cssClass = "active"
                =image_tag photo.photo.url(:tiny), :class => "#{cssClass} thumb"