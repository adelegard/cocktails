-if editable
    %input.cabinet_ingredient_search.ingredients_ac{:type => "text", :placeholder => "Search for an ingredient..."}
    %button.add_cabinet_ingredient.btn.btn-success Add
    %br
%table.liquor_cabinet_ingredients
    %tbody
        %tr.dn
            %td
                %i.icon-remove
                -ing = Ingredient.new
                -ing.ingredient = "place_holder"
                -ing.id = -1
                -ing.slug = "placeholder"
                .lc_ingredient.dib= render :partial => '/recipes/ingredient', :locals => {:ingredient => ing}
        -ingredients.each do |ingredient|
            %tr
                %td
                    -if editable
                        %i.icon-remove.dib
                    .lc_ingredient.dib= render :partial => '/recipes/ingredient', :locals => {:ingredient => ingredient}
-disabled = false
-if ingredients.size == 0
    -disabled = true
-if editable || ingredients.size > 0
    %br
    %a.view_makeable_recipes.btn.btn-primary{:href => "/recipes/liquor_cabinet", "data-loading-text" => "Calculating...", :disabled => disabled} View Makeable Recipes
-else
    %h2
        Nothing is in here! So sad!
        %br
        %small
            Show them how it's done and
            %a{:href => cabinet_path} add to your liquor cabinet