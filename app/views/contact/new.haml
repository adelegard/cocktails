-@pageTitle = "Contact"

.page-header
  %h1
    Contact
    %small Have questions or feedback? Shoot us a line

= form_for @message, :html => { :class => "form-horizontal validate"}, :url => contact_path do |f|
  = f.error_messages
  %fieldset.fields
    .control-group
      = f.label :name, :class => "control-label"
      .controls
        = f.text_field :name, :class => "input-xlarge v_required v_min_2", :placeholder => "Enter your name..."
    .control-group
      = f.label :email, :class => "control-label"
      .controls
        = f.email_field :email, :class => "input-xlarge v_required v_email", :placeholder => "Enter your email address..."
    .control-group
      = f.label :subject, :class => "control-label"
      .controls
        = f.text_field :subject, :class => "input-xlarge v_required v_min_2", :placeholder => "Enter your message subject..."
    .control-group
      = f.label :body, :class => "control-label"
      .controls
        = f.text_area :body, :class => "input-xlarge v_required v_min_2", :placeholder => "Enter your message body...", :rows => 5
    .control-group
      .controls
        = f.submit "Send", :class => "btn btn-primary btn-large"