=render :partial => "layouts/account_sidebar"
.span7
  .page-header
    %h1 Profile
  = form_for(resource, :as => resource_name, :url => update_user_settings_path, :html => { :method => :put, :class => "form-horizontal validate" }) do |f|
    = devise_error_messages!
    %fieldset
      .control-group
        = f.label "Profile Page", :class => "control-label"
        .controls
          = f.text_field :profile_page, :class => "f_user_profile_page"
      .control-group
        = f.label :url, :class => "control-label"
        .controls
          = f.url_field :url, :placeholder => "http://www.myblog.com"
      .control-group
        = f.label :location, :class => "control-label"
        .controls
          = f.text_field :location
      .control-group
        = f.label :about_me, :class => "control-label"
        .controls
          = f.text_area :about_me, :class => "input-xlarge", :rows => 3
      .control-group
        .controls
          = f.submit "Update", {:class => "btn btn-large btn-primary"}
  %br
  %img.avatar_small{"data-email" => current_user.email}
  %a{:href => "http://www.gravatar.com"} Change your avatar at Gravatar.com
  %span
    We are using
    = current_user.email
  .page-header
  %h3.danger Cancel my account
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.