.page-header
    %h1.tac Forgot your password?
%br
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "devise form-horizontal" }) do |f|
    = devise_error_messages!
    %fieldset
        .control-group
            .controls= f.email_field :email, :placeholder => "Enter Email"
    = f.submit "Send reset password instructions", {:class => "btn btn-large btn-primary"}
    %br
    %br
    = render :partial => "devise/links"
